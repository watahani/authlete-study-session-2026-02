{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["apps/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
